<Window x:Class="WPF_Image_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="769" Width="1024">
       <DockPanel>
            <Menu x:Name="menuBar" DockPanel.Dock="Top" Width="Auto" Height="20" VerticalAlignment="Top">
                <MenuItem Header="File" >
                    <MenuItem Header="Open" Click="open_FileDialog"/>
                    <MenuItem Header="Save" />
                    <MenuItem Header="Discard Changes" />
                    <Separator/>
                    <MenuItem Header="Quit" />
                </MenuItem>
                <MenuItem Header="Effects" >
                    <MenuItem Header="RGB Modifier" />
                    <MenuItem Header="BSL Modifier" />
                    <MenuItem Header="Custom Greyscale" />
                    <MenuItem Header="Custom Matrix Transform" />
                    <MenuItem Header="Optimized Greyscale" />
                    <MenuItem Header="Invert" />
                </MenuItem>
            </Menu>
            <Image x:Name="mainImage" />
    </DockPanel>
</Window>
