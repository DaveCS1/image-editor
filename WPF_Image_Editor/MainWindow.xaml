                <MenuItem Header="_Effects" >
                    <MenuItem Header="_RGB Modifier" />
                    <MenuItem Header="_BSL Modifier" />
                    <MenuItem Header="_Custom Greyscale" />
                    <MenuItem Header="_Custom Matrix Transform" />
